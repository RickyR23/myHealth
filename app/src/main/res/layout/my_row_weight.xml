<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:id="@+id/weightMainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/weightDateText"
                android:layout_width="112dp"
                android:layout_height="36dp"
                android:layout_marginStart="5dp"
                android:text="08/27/2002"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/weightTimeText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/weightTimeText"
                android:layout_width="52dp"
                android:layout_height="34dp"
                android:layout_marginStart="112dp"
                android:layout_marginEnd="120dp"
                android:text="16:30"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/weightGlucoseText"
                app:layout_constraintStart_toStartOf="@+id/weightDateText"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/weightGlucoseText"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_marginStart="76dp"
                android:text="60"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/weightTimeText"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lbs"
                android:layout_width="73dp"
                android:layout_height="29dp"
                android:text="lbs/kg"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/weightGlucoseText"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/weightNotesText"
                android:layout_width="346dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"

                android:layout_marginTop="42dp"
                android:text="Notes"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>